.sidebar-footer {
  margin-top: auto;
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding-right: 1ex;
  padding-bottom: 1ex;
  
  .device-container {
    width: 100%;
    min-height: 50px;
    position: relative;
  }
  
  .device-card {
    width: calc(100% - 10px);
    margin: 5px;
    border-radius: 8px;
    background-color: rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    z-index: 1;
    overflow: hidden;
    transition: all 0.2s ease;
    
    &:hover {
      background-color: rgba(0, 0, 0, 0.5);
    }
    
    &.inactive {
      opacity: 0.6;
    }
    
    .device-header {
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 2px;
      background-color: #000;
      border-top-right-radius: 8px;
      border-top-left-radius: 8px;
      
      .device-value {
        min-width: 30px;
        font-size: 1.3rem;
        font-weight: 700;
        color: white;
        text-shadow: 0 0 2px rgba(0, 0, 0, 0.5);
        line-height: 1;
        padding: 5px 0;
      }
    }

    .device-icon {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 5px 0;
      
      .icon-main {
        font-size: 18px;
        transition: all 0.3s ease;
      }
    }
  }

  .device-card {
    // Rest of the styles are already defined above
    
    .device-header {
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-bottom: 2px;
      background-color: #000;
      border-top-right-radius: 8px;
      border-top-left-radius: 8px;
      
      .device-value {
        min-width: 30px;
        font-size: 1.3rem;
        font-weight: 700;
        color: white;
        text-shadow: 0 0 2px rgba(0, 0, 0, 0.5);
        line-height: 1;
        padding: 5px 0;
      }
    }

    .device-icon {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 5px 0;
      
      .icon-main {
        font-size: 18px;
        transition: all 0.3s ease;
      }
    }

    &.active {
      .device-icon .icon-main {
        transform: scale(1.1);
        filter: drop-shadow(0 0 6px rgba(255, 255, 255, 0.4));
      }
    }

    &.inactive {
      opacity: 0.6;
      
      .device-icon .icon-main {
        filter: grayscale(0.5);
      }
    }
    
  .nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: transparent;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    width: calc(100% -  1ex);
    text-align: center;
    position: relative;
    margin-left: 1ex;
    border-radius: 0.4ex;
    background: rgba(255, 255, 255, 0.15);
    }

  // These connection styles have been moved to the device-card class

  // Device type specific styling moved to the device-card class
        filter: drop-shadow(0 0 4px rgba(255, 212, 59, 0.4));
      }
    }

    &.cadence {
      .device-header .device-value {
        color: #ff922b;
      }
      
      .device-icon .icon-main {
        color: #ff922b;
        filter: drop-shadow(0 0 4px rgba(255, 146, 43, 0.4));
      }
    }

    &.speed {
      .device-header .device-value {
        color: #339af0;
      }
      
      .device-icon .icon-main {
        color: #339af0;
        filter: drop-shadow(0 0 4px rgba(51, 154, 240, 0.4));
      }
    }

    &.unknown {
      .device-header .device-value {
        color: #adb5bd;
      }
      
      .device-icon .icon-main {
        color: #adb5bd;
        filter: drop-shadow(0 0 4px rgba(173, 181, 189, 0.4));
      }
    }


  }
}

// Pulse animation for active devices
@keyframes pulse {
  0%, 100% { 
    transform: scale(1); 
    opacity: 1;
  }
  50% { 
    transform: scale(1.05); 
    opacity: 0.8;
  }
}

// Heartbeat animation for heart rate devices
@keyframes heartbeat {
  0%, 50%, 100% { 
    transform: scale(1); 
    filter: drop-shadow(0 0 4px rgba(255, 107, 107, 0.4));
  }
  25% { 
    transform: scale(1.15); 
    filter: drop-shadow(0 0 8px rgba(255, 107, 107, 0.8));
  }
  75% { 
    transform: scale(1.05); 
    filter: drop-shadow(0 0 6px rgba(255, 107, 107, 0.6));
  }
}